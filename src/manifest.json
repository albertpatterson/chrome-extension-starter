{
  "manifest_version": 3,
  "name": "Chrome-Extension-Starter",
  "version": "1.0.0",

  "description": "Chrome-Extension-Starter is a starter project for a Chrome Browser Extension including a build system facilitating rapid development and creation of optimized assets for deployment, ideal for developing complex extensions.",

  "action": {
    "default_title": "Chrome Extension Starter",
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },

  "background": {
    "service_worker": "background/service_worker.js"
  },
  "commands": {},
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["injected/all_pages.js"]
    },
    {
      "matches": ["https://*/home/*", "http://*/home/*"],
      "js": ["injected/home_page.js"]
    }
  ],
  "homepage_url": "https://github.com/albertpatterson/chrome-extension-starter",
  "permissions": []
}
